<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorSurface"
    android:padding="16dp">

    <!-- Progress circle -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_gravity="center"
            app:cardCornerRadius="110dp"
            app:cardElevation="6dp"
            app:strokeColor="?attr/colorOutline"
            app:strokeWidth="1dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <!-- Circular progress -->
                <ProgressBar
                    android:id="@+id/circular_progress"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:indeterminate="false"
                    android:max="100"
                    android:progress="0"
                    android:rotation="-90"
                    android:progressDrawable="@drawable/circular_progress_drawable" />

                <TextView
                    android:id="@+id/tv_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:fontFamily="@*android:string/config_bodyFontFamily"
                    android:textColor="@color/gray_light"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </FrameLayout>

    <!-- App info -->
    <ImageView
        android:id="@+id/ivCurrentAppIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:contentDescription="App icon"/>
    <TextView
        android:id="@+id/tv_current_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Optimizando aplicaciones..."
        android:textSize="16sp"
        android:ellipsize="end"
        android:fontFamily="@*android:string/config_bodyFontFamily"
        android:textColor="@color/gray_light"
        android:layout_gravity="center_horizontal"
        android:paddingTop="4dp"
        android:paddingBottom="12dp"/>

    <!-- CPU Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cpuCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvCPU"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPU: 0%"
                android:textSize="16sp"
                android:fontFamily="@*android:string/config_bodyFontFamily"
                android:textColor="@color/gray_light"/>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/lpiCPU"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                app:trackColor="@color/gray_light"
                app:indicatorColor="@color/green"/>
            
            <!-- Después de lpiCPU -->
            <HorizontalScrollView
                android:id="@+id/coresScrollView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/coresContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp" />

            </HorizontalScrollView>

        <!-- Mantén los TextView de info por si acaso -->
        <TextView
            android:id="@+id/tvCPUCores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textSize="10sp"
            android:textColor="@color/gray_light"
            android:fontFamily="@*android:string/config_bodyFontFamily"
            android:visibility="gone" /> <!-- Ocultos por ahora -->

        <TextView
            android:id="@+id/tvCPUFreqs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="10sp"
            android:textColor="@color/gray_light"
            android:fontFamily="@*android:string/config_bodyFontFamily"
            android:visibility="gone" /> <!-- Ocultos por ahora -->

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- RAM Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/ramCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvRAM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RAM: 0/0 MB"
                android:textSize="16sp"
                android:fontFamily="@*android:string/config_bodyFontFamily"
                android:textColor="@color/gray_light"/>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/lpiRAM"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                app:trackColor="@color/gray_light"
                app:indicatorColor="@color/green"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Temp Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/tempCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:strokeColor="?attr/colorOutline"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvTemp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Temp: 0°C"
                android:textSize="16sp"
                android:fontFamily="@*android:string/config_bodyFontFamily"
                android:textColor="@color/gray_light"/>

            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/lpiTemp"
                android:layout_width="match_parent"
                android:layout_height="12dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@*android:string/config_bodyFontFamily"
                app:trackColor="@color/gray_light"
                app:indicatorColor="@color/green"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Exit FAB -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabExit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_margin="16dp"
        android:visibility="gone"
        android:contentDescription="Salir"
        android:src="@android:drawable/ic_menu_close_clear_cancel"
        app:backgroundTint="@color/error_red"/>
</LinearLayout>
